<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Mi Tienda</a>
        <div class="navbar-nav me-auto">
          <a class="nav-link" href="/">Home</a>
          <a class="nav-link" href="/realtimeproducts">Tiempo Real</a>
        </div>
        <!-- Icono del carrito -->
        <div class="d-flex align-items-center">
          <button
            id="cartIcon"
            class="btn btn-outline-light position-relative"
            style="display: none;"
            onclick="irAlCarrito()"
          >
            ðŸ›’ Mi Carrito
            <span
              id="cartBadge"
              class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
              style="display: none;"
            >
              0
            </span>
          </button>
        </div>
      </div>
    </nav>

    <main class="container my-4">
      {{{body}}}
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    <!-- Sistema de notificaciones global -->
    <script src="/js/notifications.js"></script>

    <!-- Global Cart Functions -->
    <script>
      function irAlCarrito() { const cartId =
      localStorage.getItem('currentCartId'); if (cartId) { window.location.href
      = `/carts/${cartId}`; } else { if (window.notifications) {
      window.notifications.warning('No tienes un carrito activo'); } else {
      alert('No tienes un carrito activo'); } } } function
      actualizarIconoCarrito() { const cartId =
      localStorage.getItem('currentCartId'); const cartIcon =
      document.getElementById('cartIcon'); const cartBadge =
      document.getElementById('cartBadge'); if (cartId) {
      fetch(`/api/carts/${cartId}`) .then(res => res.json()) .then(data => { if
      (data.error) { localStorage.removeItem('currentCartId');
      cartIcon.style.display = 'none'; } else { cartIcon.style.display =
      'block'; if (data.products && data.products.length > 0) { const totalItems
      = data.products.reduce((total, item) => total + item.quantity, 0);
      cartBadge.style.display = 'block'; cartBadge.textContent = totalItems; }
      else { cartBadge.style.display = 'none'; } } }) .catch(() => {
      cartIcon.style.display = 'none'; }); } else { cartIcon.style.display =
      'none'; } } document.addEventListener('DOMContentLoaded', function() {
      actualizarIconoCarrito(); setInterval(actualizarIconoCarrito, 5000); });
      window.actualizarCarrito = actualizarIconoCarrito;
    </script>
  </body>
</html>